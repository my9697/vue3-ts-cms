# http://editorconfig.org

root=true
[*] # 表示所有文件适用
charset=utf-8 # 设置文字为字符集
indent_style = space # 缩进风格
indent_size = 2 # 缩进大小
end_of_line = lf # 控制换行类型
trim_trailing_whitespace = true # 去除尾部任意空白字符
insert_final_newline = true # 始终在文件末尾加入一个新行

[*.md] # 表示.md文件适用以下规则
max_line_length=off
trim_trailing_whitespace = false